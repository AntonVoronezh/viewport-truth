{
"compilerOptions": {
"target": "ES2022",
"lib": ["ES2022", "DOM", "DOM.Iterable"],
"module": "ESNext",
"moduleResolution": "Bundler",

"strict": true,
"noUncheckedIndexedAccess": true,
"exactOptionalPropertyTypes": true,

"skipLibCheck": true,
"forceConsistentCasingInFileNames": true,

"declaration": true,
"declarationMap": true,
"sourceMap": true,

"verbatimModuleSyntax": true,
"isolatedModules": true,

"types": []
},
"include": ["src/**/*.ts"]
}
